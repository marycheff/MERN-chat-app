{
    "compilerOptions": {
        "typeRoots": ["./src/types"],
        "module": "commonjs",
        "target": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "declaration": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "lib": ["ES2020"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "files": ["src/types/express.d.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
